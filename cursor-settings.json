    "opencv",
    "librosa",
    "soundfile",
    "pydub",
    "webrtc",
    "socketio",
    "framer",
    "tailwind",
    "vite",
    "eslint",
    "prettier",
    "typescript",
    "javascript",
    "reactjs",
    "nodejs",
    "npm",
    "yarn",
    "pnpm",
    "webpack",
    "babel",
    "jest",
    "react",
