    "vram",
    "cuda",
    "optimization",
    "performance",
    "caching",
    "batching",
    "pipeline",
    "preprocessing",
    "postprocessing"
  ],
  
  "cSpell.language": "en,ru",
  
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE",
    "OPTIMIZE",
    "GPU",
    "CUDA",
    "AI",
    "ML"
  ],
  
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "tag",
      "foreground": "#ffcc00",
      "background": "#ffcc0020"
    },
    "FIXME": {
      "icon": "alert",
      "type": "tag",
      "foreground": "#ff6b6b",
      "background": "#ff6b6b20"
    },
    "GPU": {
      "icon": "device-desktop",
      "type": "tag",
      "foreground": "#4ecdc4",
      "background": "#4ecdc420"
    },
    "AI": {
      "icon": "brain",
      "type": "tag",
      "foreground": "#a8e6cf",
      "background": "#a8e6cf20"
    }
  }
} 